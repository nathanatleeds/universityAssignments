/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN x, y, z;  // 1-bit inputs
    OUT sum,     // Right bit of x + y + z
        carry;   // Left bit of x + y + z

    PARTS:
    HalfAdder(x=x,y=y,sum=xy,carry=zxy);
    HalfAdder(x=z,y=xy,sum=sum,carry=temp1);
    Or(x=zxy,y=temp1,out=carry);

}
